buildarch=4

pkgname=JTFPGA-MiSTer
pkgver=18.gffdbeae
pkgrel=1
pkgdesc="JT cores for MiSTerFPGA, including premium and beta content"
arch=('any')
url='https://github.com/jotego/jtpremium'
license=('GPL3')
source=('git+https://github.com/jotego/jtpremium.git#branch=main')
sha256sums=('SKIP')
_gitfolder="jtpremium"

pkgver() {
  date +%F | tr -d '-'
}

package() {
  mkdir -p "${pkgdir}/media/fat/_Arcade/_JOTEGO"
  install ${srcdir}/${_gitfolder}/_Arcade/cores/*.rbf  -Dt "${pkgdir}/media/fat/_Arcade/cores/"
  install ${srcdir}/${_gitfolder}/_Arcade/*.mra -Dt "${pkgdir}/media/fat/_Arcade/_JOTEGO"

  mkdir -p "${pkgdir}/media/fat/_Arcade/_JOTEGO/_Alternatives"
  cp -r ${srcdir}/${_gitfolder}/_Arcade/_alternatives/* "${pkgdir}/media/fat/_Arcade/_JOTEGO/_Alternatives"
}
